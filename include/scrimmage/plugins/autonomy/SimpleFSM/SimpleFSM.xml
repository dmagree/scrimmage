<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="http://gtri.gatech.edu"?>
<params>
  <library>SimpleFSM_plugin</library>

  <state_topic_name>State</state_topic_name>
  <event_topic_name>Event</event_topic_name>
  
  <!-- Events, Nesting, publish state entry/exit, -->
  <fsm>
    [ A 1->B ]
    [ B 2->A 3->C ]
    [ C 4->D ]
    [ D 5->A ]
    [ D::a 6->D::b ]
    [ D::b 7->D::c ]
    [ D::c 8->D::a 9->D::b ]
    [ D 5->A
        [a 6->b ]
        [b 7->c ]
        [c 8->a 9->b]
    ]
  </fsm>

  <graphviz_fsm>
    digraph {
        a -> b[label="1"];
        b -> c[label="2"];
        c -> d[label="3"];
        d -> a[label="4"];
    }
  </graphviz_fsm>
  
</params>
